@model EventCreateViewModel

@{
}

<div>
    <h1 class="mb-4" style="text-align: center">Create your own event !</h1>
    <form>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label font-weight-bold" for="eventName">Name of the event</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="eventName" placeholder="Enter the name of your event">
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label font-weight-bold" for="organiserName">Name of the organiser</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="organiserName" placeholder="Enter the name of the organiser">
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label font-weight-bold" for="date">Date of the event</label>
            <div class="col-sm-10">
                <input type="date" class="form-control" id="date" placeholder="Enter the date of the event">
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label font-weight-bold" for="categories">Category</label>
            <div class="col-sm-10">
                <select class="form-control" id="categories">
                    <option>Category 1</option>
                    <option>Category 2</option>
                    <option>Category 3</option>
                    <option>Category 4</option>
                </select>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label font-weight-bold" for="numberPlaces">Number of places</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" id="numberPlaces" placeholder="Enter the number of places for the event">
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label font-weight-bold" for="localisation">Localisation of the event</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="localisation" placeholder="Enter the localisation of the event">
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label font-weight-bold" for="description">Description of the event</label>
            <div class="col-sm-10">
                <textarea maxlength="500" class="form-control" id="description" aria-describedby="descriptionHelp" rows="6"></textarea>
                <small id="descriptionHelp" class="form-text text-muted">Maximum of 500 characters</small>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label font-weight-bold" for="image">Image</label>
            <div class="col-sm-10">
                <input type="file" id="image" name="image">
            </div>
        </div>
    </form>

    <form class="text-center mt-4" method="post">
        <button class="btn btn-primary btn-lg">
            Create the event
        </button>
    </form>
</div>

